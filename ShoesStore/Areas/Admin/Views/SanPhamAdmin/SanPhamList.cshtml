@using ShoesStore.Models
@model List<Sanpham>
@{
    int count = 0;
    // Lưu giá trị TempData sang ViewBag để không bị mất khi redirect
    var tendongsp = TempData["Tendongsp"] as string ?? ViewBag.Tendongsp;
    var tenLoai = TempData["TenLoai"] as string ?? ViewBag.TenLoai;
    var madongsp = TempData["madongsp"] ?? ViewBag.madongsp;
}
<!-- Hiển thị thông báo thành công / thất bại -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dongsanpham">Shoes List</a></li>
        <li class="breadcrumb-item active" aria-current="page">Shoes Detail List</li>
    </ol>
</nav>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Shoes List</h4>

        <div class="row mb-3">
            <div class="col-md-6">
                <h3>Shoes Name: @tendongsp</h3>
            </div>
            <div class="col-md-6 text-end">
                <h3>Shoes Category: @tenLoai</h3>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <a asp-action="Index" asp-controller="Dongsanpham" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Shoes List
                </a>
            </div>
            <div class="col-md-6 text-end">
                <a asp-action="AddSanPham"
                   asp-controller="SanPhamAdmin"
                   asp-route-madongsp="@madongsp"
                   class="btn btn-primary">
                    <i class="fas fa-plus"></i> Create shoes detail
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped text-center align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Index</th>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Color</th>
                    <th>Color Name</th>
                    <th>State</th>
                    <th>Total Quantity</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (Sanpham ctSp in Model)
                    {
                        <tr>
                            <td>@(++count)</td>
                            <td>
                                <img src="~/img/@ctSp.Madongsanpham/@ctSp.Anhdaidien"
                                     alt="Product Image"
                                     style="height:100px;width:100px;border-radius:3px;"
                                     class="img-fluid shadow-sm" />
                            </td>
                            <td>@tendongsp</td>
                            <td>
                                <div style="height: 30px; width: 30px; border-radius: 50%; background-color: @ctSp.Mamau; margin: 0 auto; border: 1px solid #ccc;"></div>
                            </td>
                            <td>@(ctSp.MamauNavigation?.Tenmau ?? "—")</td>
                            <td>@ctSp.TrangThai</td>
                            <td>@ctSp.Sanphamsizes.Sum(x => x.Slton)</td>
                            <td>
                                <a class="btn btn-info btn-sm"
                                   asp-action="UpdateSanPham"
                                   asp-controller="SanPhamAdmin"
                                   asp-route-masp="@ctSp.Masp"
                                   title="Edit">
                                    <i class="fas fa-pen"></i>
                                </a>
                                <a asp-action="DeleteSanPham"
                                   asp-controller="SanPhamAdmin"
                                   asp-route-masp="@ctSp.Masp"
                                   class="btn btn-danger btn-sm"
                                   onclick="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này không?');"
                                   title="Delete">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center text-muted">Chưa có sản phẩm nào trong danh sách này.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
