    <!-- Popup Notification -->
    <div class="popup-overlay" id="notificationPopup" style="display: none;">
        <div class="popup-content" id="popupContent">
            <div class="popup-icon" id="popupIcon">
                <i class="fas fa-check-circle"></i>
            </div>
            <div class="popup-text" id="popupText">Thông báo</div>
            <button class="btn-popup" onclick="hideNotification()">OK</button>
        </div>
    </div>

    <script>
        // Hiển thị thông báo
        function showNotification(message, isSuccess = true) {
            const popup = document.getElementById('notificationPopup');
            const popupContent = document.getElementById('popupContent');
            const popupIcon = document.getElementById('popupIcon');
            const popupText = document.getElementById('popupText');

            // Giải mã HTML entities (sửa lỗi ký tự)
            const decodedMessage = decodeHtmlEntities(message);
            popupText.textContent = decodedMessage;

            if (isSuccess) {
                popupContent.className = 'popup-content';
                popupIcon.innerHTML = '<i class="fas fa-check-circle"></i>';
            } else {
                popupContent.className = 'popup-content error';
                popupIcon.innerHTML = '<i class="fas fa-exclamation-circle"></i>';
            }

            // Hiển thị popup
            popup.style.display = 'flex';

            // Animation
            setTimeout(() => {
                popupContent.classList.add('show');
            }, 50);
        }

        // Ẩn thông báo
        function hideNotification() {
            const popup = document.getElementById('notificationPopup');
            const popupContent = document.getElementById('popupContent');

            popupContent.classList.remove('show');

            setTimeout(() => {
                popup.style.display = 'none';
            }, 300);
        }

        // Giải mã HTML entities
        function decodeHtmlEntities(text) {
            const textArea = document.createElement('textarea');
            textArea.innerHTML = text;
            return textArea.value;
        }

        // Tự động hiển thị thông báo khi trang load
        document.addEventListener('DOMContentLoaded', function() {
            // Kiểm tra TempData từ server
            const successMessage = '@Html.Raw(TempData["Success"])';
            const errorMessage = '@Html.Raw(TempData["Error"])';

            console.log('Admin Success Message:', successMessage);
            console.log('Admin Error Message:', errorMessage);

            if (successMessage && successMessage !== '') {
                showNotification(successMessage, true);
            } else if (errorMessage && errorMessage !== '') {
                showNotification(errorMessage, false);
            }

            // Click outside to close
            document.getElementById('notificationPopup').addEventListener('click', function(e) {
                if (e.target === this) {
                    hideNotification();
                }
            });

            // ESC key to close
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    hideNotification();
                }
            });
        });
    </script>
