@using ShoesStore.Models
@model Voucher

@{
    ViewData["Title"] = "Create Voucher";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<div class="container">
    <h2 class="text-center">Create New Voucher</h2>

    <form asp-action="Create" method="post" class="form-horizontal">
        <!-- MÃ VOUCHER -->
        <div class="form-group row">
            <label asp-for="Mavoucher" class="col-sm-2 col-form-label">Mã Voucher</label>
            <div class="col-sm-10">
                <input asp-for="Mavoucher" class="form-control" />
                @if (ViewData.ModelState["Mavoucher"]?.Errors.Count > 0)
                {
                    <span class="text-danger">
                        <i class="fas fa-exclamation-circle"></i>
                        @ViewData.ModelState["Mavoucher"].Errors[0].ErrorMessage
                    </span>
                }
            </div>
        </div>

        <!-- SỐ LƯỢNG -->
        <div class="form-group row">
            <label asp-for="Soluong" class="col-sm-2 col-form-label">Số Lượng</label>
            <div class="col-sm-10">
                <input asp-for="Soluong" class="form-control" />
                <span asp-validation-for="Soluong" class="text-danger"></span>
            </div>
        </div>

        <!-- GIÁ TỐI THIỂU -->
        <div class="form-group row">
            <label asp-for="Giatoithieu" class="col-sm-2 col-form-label">Giá Tối Thiểu</label>
            <div class="col-sm-10">
                <input asp-for="Giatoithieu" class="form-control" />
                <span asp-validation-for="Giatoithieu" class="text-danger"></span>
            </div>
        </div>

        <!-- GIẢM TỐI ĐA -->
        <div class="form-group row">
            <label asp-for="Giamtoida" class="col-sm-2 col-form-label">Giảm Tối Đa</label>
            <div class="col-sm-10">
                <input asp-for="Giamtoida" class="form-control" />
                <span asp-validation-for="Giamtoida" class="text-danger"></span>
            </div>
        </div>

        <!-- NGÀY TẠO -->
        <div class="form-group row">
            <label asp-for="Ngaytao" class="col-sm-2 col-form-label">Ngày Tạo</label>
            <div class="col-sm-10">
                <input asp-for="Ngaytao" class="form-control" type="date" />
                <span asp-validation-for="Ngaytao" class="text-danger"></span>
            </div>
        </div>

        <!-- NGÀY HẾT HẠN -->
        <div class="form-group row">
            <label asp-for="Ngayhethan" class="col-sm-2 col-form-label">Ngày Hết Hạn</label>
            <div class="col-sm-10">
                <input asp-for="Ngayhethan" class="form-control" type="date" />
                @if (ViewData.ModelState["Ngayhethan"]?.Errors.Count > 0)
                {
                    <span class="text-danger">
                        <i class="fas fa-exclamation-circle"></i>
                        @ViewData.ModelState["Ngayhethan"].Errors[0].ErrorMessage
                    </span>
                }
            </div>
        </div>

        <!-- NÚT SUBMIT -->
        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-check"></i> Tạo Voucher
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}