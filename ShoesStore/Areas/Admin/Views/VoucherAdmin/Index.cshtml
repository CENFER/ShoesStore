@using ShoesStore.Models
@model List<Voucher>

@{
    ViewData["Title"] = "Voucher List Page";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<div class="text-center">
    <h2 class="display-4">VOUCHER LIST</h2>
</div>

@section searchArea {
    <form id="searchForm" asp-controller="Voucher" asp-action="Index" method="get" class="d-flex" style="width:468px">
        <div class="input-group">
            <input name="searchString" id="searchString" type="search" placeholder="searching vouchers..." class="form-control rounded" aria-label="Search">
            <button class="btn btn-info rounded" type="submit">
                <i class="fas fa-search"></i>
            </button>
        </div>
    </form>
}

<div style="display: flex; justify-content: space-between; align-items: center; width:100%">
    <a asp-action="Create" asp-controller="VoucherAdmin" class="btn btn-primary"><i class="fas fa-plus-circle"></i> Add New</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered text-center">
        <thead>
            <tr>
                <th scope="col">Index</th>
                <th scope="col">Code</th>
                <th scope="col">Quantity</th>
                <th scope="col">Minimum Price</th>
                <th scope="col">Maximum Discount</th>
                <th scope="col">Created Date</th>
                <th scope="col">Expiration Date</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@(i + 1)</td>
                    <td>@Model[i].Mavoucher</td>
                    <td>@Model[i].Soluong</td>
                    <td>@Model[i].Giatoithieu.ToString("#,##0"+"đ")</td>
                    <td>@Model[i].Giamtoida.ToString("#,##0" + "đ")</td>
                    <td>@Model[i].Ngaytao.ToString("dd/MM/yyyy")</td>
                    <td>@Model[i].Ngayhethan.ToString("dd/MM/yyyy")</td>
                    <td>
                        <div class="d-flex justify-content-center gap-2">
                            <a asp-action="Edit"
                               asp-controller="VoucherAdmin"
                               asp-route-id="@Model[i].Mavoucher"
                               class="btn btn-gradient-primary d-flex align-items-center justify-content-center"
                               style="width:40px; height:40px;"
                               title="Edit"
                               aria-label="Edit voucher @Model[i].Mavoucher">
                                <i class="mdi mdi-table-edit"></i>
                            </a>

                            <form asp-controller="VoucherAdmin"
                                  asp-action="Delete"
                                  asp-route-id="@Model[i].Mavoucher"
                                  method="post"
                                  class="d-inline"
                                  onsubmit="return confirm('Bạn có chắc chắn muốn xóa voucher này không?');">
                                @Html.AntiForgeryToken()
                                <button type="submit"
                                        class="btn btn-gradient-danger d-flex align-items-center justify-content-center"
                                        style="width:40px; height:40px;"
                                        title="Delete"
                                        aria-label="Delete voucher @Model[i].Mavoucher">
                                    <i class="mdi mdi-delete"></i>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


