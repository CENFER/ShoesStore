@using ShoesStore.Models
@model List<Size>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
        <i class="fas fa-times-circle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="text-center">
    <h2 class="display-4">SIZE LIST</h2>
</div>

<a asp-action="Create" asp-controller="Size" class="btn btn-primary mb-3">
    <i class="mdi mdi-plus-circle"></i> Add New Size
</a>

<div class="table-responsive">
    <table class="table table-striped table-bordered text-center align-middle">
        <thead class="table-dark">
            <tr>
                <th>Index</th>
                <th>Size Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @{
                int index = 0;
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(++index)</td>
                    <td>@item.Tensize</td>
                    <td>
                        <div class="d-flex justify-content-center gap-2">
                            <a asp-action="Edit"
                               asp-controller="Size"
                               asp-route-id="@item.Masize"
                               class="btn btn-gradient-primary d-flex align-items-center justify-content-center"
                               style="width:40px; height:40px;"
                               title="Edit">
                                <i class="mdi mdi-table-edit"></i>
                            </a>

                            <a asp-action="Delete"
                               asp-controller="Size"
                               asp-route-id="@item.Masize"
                               class="btn btn-gradient-danger d-flex align-items-center justify-content-center"
                               style="width:40px; height:40px;"
                               onclick="return confirm('Bạn có chắc chắn muốn xóa kích cỡ này không?');"
                               title="Delete">
                                <i class="mdi mdi-delete"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
