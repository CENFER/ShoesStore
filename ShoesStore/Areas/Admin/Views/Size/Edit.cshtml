@model ShoesStore.Models.Size
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
        <i class="fas fa-times-circle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@{
    ViewData["Title"] = "Edit";
}

@using (Html.BeginForm("Edit", "Size", FormMethod.Post, new { }))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h2 class="card-center">Edit size</h2>
                <form class="forms-sample">
                    <div class="form-group">
                        <label asp-for="Tensize">Size name</label>
                        <input type="text" asp-for="Tensize" class="form-control" id="exampleInputName1" placeholder="Name">
                        <span asp-validation-for="Tensize" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-gradient-primary me-2">Edit</button>
                    <a href="@Url.Action("Index", "Size")" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
}