@using ShoesStore.Models
@model List<Loai>
@{
    ViewData["title"] = "Type page";
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
        <button class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
        <i class="fas fa-times-circle me-2"></i>@TempData["Error"]
        <button class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">

<link rel="stylesheet" href="path/to/font-awesome/css/all.min.css" />

<div class="text-center">
    <h2 class="display-4">SHOES CATEGORY LIST</h2>
</div>

@section searchArea{
    <form id="searchForm" asp-controller="Loai" asp-action="Index" method="get" class="d-flex" style="width:468px">
        <div class="input-group">
            <!-- Search bar -->
            <input name="searchString" id="searchString" type="search" placeholder="search type shoes..." class="form-control rounded" aria-label="Search" style="width:100px">
            <button class="btn btn-info rounded" type="submit" style="width: 40px; height: 40px;">
                <i class="fas fa-search"></i>
            </button>
        </div>
    </form>

}
<div style="display: flex; justify-content: space-between; align-items: center; width:100%">
    <!-- Link for creating a new Loai -->
    <a asp-action="Create" asp-controller="Loai" class="btn btn-primary"><i class="mdi mdi-plus-circle"></i></a>
</div>
<div class="table-responsive">
    <table class="table table-striped table-bordered text-center">
        <thead>
            <tr>
                <th scope="col">Index</th>
                <th scope="col">Shoes Category Name</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            <!-- Populate table with Loai data -->
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Maloai</td>
                    <td>@item.Tenloai</td>
                    <td class="text-center align-middle">
                        <div class="d-flex justify-content-center gap-2">
                            <a asp-action="Edit"
                               asp-controller="Loai"
                               asp-route-id="@item.Maloai"
                               class="btn btn-gradient-primary d-flex align-items-center justify-content-center"
                               style="width:40px; height:40px;"
                               title="Edit">
                                <i class="mdi mdi-table-edit"></i>
                            </a>

                            <a asp-action="Delete"
                               asp-controller="Loai"
                               asp-route-id="@item.Maloai"
                               class="btn btn-gradient-danger d-flex align-items-center justify-content-center"
                               style="width:40px; height:40px;"
                               onclick="return confirm('Bạn có chắc chắn muốn xóa loại giày này không?');"
                               title="Delete">
                                <i class="mdi mdi-delete"></i>
                            </a>
                        </div>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
